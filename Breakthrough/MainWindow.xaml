<Window x:Class="Breakthrough.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Breakthrough" Name="windowBreakthrough" Height="375" Width="375" MinHeight="300" MinWidth="300"  xmlns:my1="clr-namespace:Nappula;assembly=Nappula" xmlns:my="clr-namespace:Lauta;assembly=Lauta">
    <Grid Name="gridBreakthrough">
        
        <!-- Ohjelman valikot -->
        <Menu Name="menuBreakthrough" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="_File" Name="menuItemFile">
                <MenuItem Header="_Exit" Name="menuItemExit" Click="menuItemExit_Click" />
            </MenuItem>
            <MenuItem Header="_Help" Name="menuItemHelp" >
                <MenuItem Header="_About..." Name="menuItemAbout" Click="menuItemAbout_Click" />
                <MenuItem Header="_Web Help..." Name="menuItemWebHelp" Click="menuItemWebHelp_Click" />
            </MenuItem>
        </Menu>
        
        <!--Pelialue-->
        <Grid Name="gridPelialue">
        <my:Lauta HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,40,40,40" Name="lautaPelialue" />
        </Grid>
        <!--Button pelin uudelleenaloittamista varten-->
        <Button  Name="buttonUusiPeli" Content="_Reset" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="buttonUusiPeli_Click" />
    </Grid>
</Window>
